[% PROCESS "common-style.css.ttml" %]
.news_buttons
{
    float: right;
}

.navbar 
{
    /* derived from moccasin, but less intrusive, as a background.*/
    background-color: #FFEED3; 
}
.navbar ul
{
    font-family: sans-serif;
    font-size : small;
}

.main 
{
    padding-left : 1em;
    margin-left : 25%;
}

.sub_menu
{
    background-color: #C0C0C0;
    padding-top: 7pt;
    padding-bottom: 2em;
    padding-right: 5pt;
    padding-left: 5pt;
    margin-bottom: 1em;
}

/* This is for the breadcrumbs trail (= leading path) at the top. */
.leading_path
{
    background-color : #ccffd0;
    margin-bottom: 0.2em;
    padding-left: 0.2em;
    padding-top: 0.1em;
    padding-bottom: 0.15em;
    margin-right: 10pt;
}
.leading_path a:visited
{
    color : #B24;
}
.leading_path a:hover
{
    background-color : #FFA500; /* orange */
}

