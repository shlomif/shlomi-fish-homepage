#!/bin/bash
rebuild()
{
    (
        set -x
        set -e
        mkdir -p ../_"$(basename "$PWD")"-clones
        for d in ../_*--clones/*
        do
            ( cd "$d"; git clean -dxf . )
        done
        git clean -dxf .
        bash -x bin/install-npm-deps.sh
        ./gen-helpers
        gmake -j4 fastrender
        gmake -j4 test
    )
}
rebuild
