#include "utils.wml"

<define-tag en_for_include endtag="required">
{#EN#:%body:##}
</define-tag>

<define-tag en endtag="required">
</define-tag>

<define-tag he_for_include endtag="required">
{#HE#:%body:##}
</define-tag>

<define-tag he endtag="required">
</define-tag>

<define-tag both endtag="required">
<en>%body</en><he>%body</he>
</define-tag>

<define-tag li_en endtag="required">
<en>
<lip>
%body
</lip>
</en>
</define-tag>

<define-tag li_he endtag="required">
<he>
<lip>
%body
