#!/bin/bash
rebuild()
{
    (
        set -x
        set -e
        cl_d=../"$(basename "$PWD")"--clones
        mkdir -p "$cl_d"
        for d in "$cl_d"/*
        do
            if test -e "$d"
            then
                ( cd "$d"; git clean -dxf . )
            fi
        done
        git clean -dxf .
        bash -x bin/install-npm-deps.sh
        ./gen-helpers
        gmake -j4 fastrender
        gmake -j4 test
    )
}
rebuild
