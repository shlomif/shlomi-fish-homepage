[ESLint javascript]
select = lib/babel/js/*.js lib/babel/old/*.js
argv = -c $ROOT/.eslintrc.yml --color
ignore = lib/babel/js/jquery.phoenix.js lib/babel/js/jquery.phoenix.min.js

[ESLint typescript]
argv = -c $ROOT/eslint-ts.json
select = src/ts/*.ts src/ts/**/*.ts
ignore =

[PerlTidy]
select = **/*.{pl,pm,t}
argv = -ci=4 -bl -cti=0 --character-encoding=none
ignore = dest/**/* lib/presentations/qp/perl-for-newbies/**/* lib/fiction-xml/from-vcs/**/* lib/screenplay-xml/from-vcs/**/* node_modules/**/* bin/shlom.in-redirect/D.pm bin/shlom.in-redirect/dest/1/D.pm bin/shlom.in-redirect/dest/1/shlom.in-refer.pl

[PerlCritic]
select = **/*.{pl,pm,t}
ignore = bin/gen-docbook-make-helpers.pl dest/**/* lib/App/Deps/Verify.pm lib/presentations/qp/perl-for-newbies/**/* lib/fiction-xml/from-vcs/**/* lib/screenplay-xml/from-vcs/**/* node_modules/**/* bin/shlom.in-redirect/D.pm bin/shlom.in-redirect/dest/1/D.pm bin/shlom.in-redirect/dest/1/shlom.in-refer.pl

[TestCount]
select = t/*.t
